# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go|*.go.tpl]
indent_style = tab

[*.md]
trim_trailing_whitespace = false


[*.py]
indent_size = 4
